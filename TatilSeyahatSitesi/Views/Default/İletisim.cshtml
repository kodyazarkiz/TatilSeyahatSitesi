<!DOCTYPE HTML>
<html>
<body>
    <div class="contact">
        <div class="wrap">
            <div class="contact-top">
                <h3>İletişim Sayfası</h3>
                <p>Bize Sormak İstediğiniz Bir Şey Mi Var Mı Bizimle İletişime Geçin</p>
            </div>
            <div class="form">
                <form class="cmxform" id="contactForm" method="post">
                    <div>
                        <input type="text" class="textbox" value="İsim:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name';}">
                    </div>
                    <div>
                        <input type="text" class="textbox" value="Mail:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}">
                    </div>
                    <div>
                        <input type="text" class="textbox" value="Telefon:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Phone';}">
                    </div>
                    <div>
                        <p><span class="read">Gönder</span></p>
                    </div>
                </form>
            </div>
            <div class="form1">
                <div>
                    <textarea value="Message:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Message';}">Mesaj:</textarea>
                </div>
            </div>
            <div class="clear"></div>
            @foreach(var x in Model)
            { 
                <div class="contact-bottom">
                    <div class="contact-left">
                        <div class="contact-add">
                            <h3>@x.Baslik</h3>
                            <p>@x.Aciklama</p>
                            <p>Adres: @x.AdresAcik</p>
                            <p>Telephone: @x.Telefon</p>
                            <p>Konum: @x.Konum</p>
                            <p>Mail:<a href="mailto:signup@gmail.com">@x.Mail</a></p>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            }
            <div class="clear"></div>
        </div>
    </div>
</body>
</html>

